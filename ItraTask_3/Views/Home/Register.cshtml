@{ }
@model ItraTask3.ViewModels.RegisterViewModel
<h2>Create new user</h2>
<form method="post" asp-controller="Home" asp-action="Register">
    <table>
        <tr>
            <th><label asp-for="Email"></label></th>
            <td>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </td>
        </tr>
        <tr>
            <th><label asp-for="Name"></label></th>
            <td>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </td>
        </tr>
        <tr>
            <th><label asp-for="Password"></label></th>
            <td>
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </td>
        </tr>
        <tr>
            <th><label asp-for="PasswordConfirm"></label></th>
            <td>
                <input asp-for="PasswordConfirm" />
                <span asp-validation-for="PasswordConfirm"></span>
            </td>
        </tr>
    </table>
    <div asp-validation-summary="ModelOnly"></div>
    <p></p>
    <div>
        <input type="submit" value="Registration" />
    </div>
</form>